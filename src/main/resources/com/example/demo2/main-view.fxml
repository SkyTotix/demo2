<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controller.MainController" styleClass="main-background">
   
   <!-- Header / Barra Superior -->
   <top>
      <HBox styleClass="header-bar" spacing="0.0" alignment="CENTER_LEFT">
         <padding>
            <Insets top="16.0" bottom="16.0" left="24.0" right="24.0" />
         </padding>
         
         <!-- Logo y Título -->
         <HBox spacing="12.0" alignment="CENTER_LEFT">
            <children>
               <StackPane fx:id="logoContainer" styleClass="header-logo-container">
                  <children>
                     <FontIcon fx:id="headerLogo" iconLiteral="fas-book" iconSize="24" iconColor="#3B82F6" styleClass="header-logo" />
                     <ImageView fx:id="headerLogoImage" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" visible="false" />
                  </children>
               </StackPane>
               <Label text="BiblioSystem" styleClass="header-title">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         
         <!-- Spacer -->
         <Region HBox.hgrow="ALWAYS" />
         
         <!-- Info del Usuario y Cerrar Sesión -->
         <HBox spacing="16.0" alignment="CENTER_RIGHT">
            <children>
               <VBox alignment="CENTER_RIGHT" spacing="2.0">
                  <children>
                     <Label fx:id="userNameLabel" text="Usuario Actual" styleClass="user-name">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <Label fx:id="userRoleLabel" text="Administrador" styleClass="user-role">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
               
               <!-- Centro de Notificaciones -->
               <Button fx:id="notificationButton" onAction="#handleShowNotifications" styleClass="notification-button">
                  <graphic>
                     <StackPane>
                        <FontIcon iconLiteral="fas-bell" iconSize="18" iconColor="#64748B" styleClass="notification-icon" />
                        <Label fx:id="notificationBadge" styleClass="notification-badge" text="0" visible="false" />
                     </StackPane>
                  </graphic>
               </Button>
               
               <Button fx:id="logoutButton" text="Cerrar Sesión" styleClass="logout-button" onAction="#handleLogout">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
            </children>
         </HBox>
      </HBox>
   </top>
   
   <!-- Sidebar / Menú Lateral -->
   <left>
      <VBox styleClass="sidebar" spacing="8.0" prefWidth="250.0">
         <padding>
            <Insets top="24.0" bottom="24.0" left="16.0" right="16.0" />
         </padding>
         
         <!-- Título del Menú -->
         <Label text="Menú Principal" styleClass="sidebar-title">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
               <Insets bottom="16.0" />
            </VBox.margin>
         </Label>
         
         <!-- Opciones del Menú según Rol -->
         <VBox fx:id="menuContainer" spacing="4.0">
            <!-- Los elementos del menú se cargarán dinámicamente según el rol -->
         </VBox>
         
         <!-- Spacer -->
         <Region VBox.vgrow="ALWAYS" />
         
         <!-- Footer del Sidebar -->
         <VBox spacing="8.0" styleClass="sidebar-footer">
            <children>
               <Separator />
               <Label text="BiblioSystem v1.0" styleClass="sidebar-footer-text">
                  <font>
                     <Font size="11.0" />
                  </font>
               </Label>
            </children>
         </VBox>
      </VBox>
   </left>
   
   <!-- Área de Contenido Principal -->
   <center>
      <StackPane styleClass="content-area">
         <padding>
            <Insets top="24.0" bottom="24.0" left="24.0" right="24.0" />
         </padding>
         
         <!-- Dashboard Principal -->
         <ScrollPane fx:id="contentScrollPane" styleClass="content-scroll" fitToWidth="true" fitToHeight="true">
            <content>
               <VBox fx:id="dashboardContainer" spacing="24.0" styleClass="dashboard-container">
                  
                  <!-- Header del Dashboard -->
                  <VBox spacing="8.0" styleClass="dashboard-header">
                     <children>
                        <HBox spacing="16.0" alignment="CENTER_LEFT">
                           <children>
                              <VBox spacing="4.0">
                                 <children>
                                    <Label text="BiblioSystem" styleClass="dashboard-main-title">
                                       <font>
                                          <Font name="System Bold" size="28.0" />
                                       </font>
                                    </Label>
                                    <Label text="Dashboard Principal" styleClass="dashboard-main-subtitle">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>

                                 </children>
                              </VBox>

                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Tarjetas de Información -->
                  <GridPane hgap="20.0" vgap="20.0" styleClass="stats-grid">
                     <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="250.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints vgrow="NEVER" />
                     </rowConstraints>
                     
                     <!-- Tarjeta Total Libros -->
                     <VBox styleClass="stats-card, stats-card-blue" spacing="12.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <padding>
                           <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
                        </padding>
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="12.0">
                              <children>
                                 <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <Label text="Total Libros" styleClass="stats-label">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                       <Label text="2,456" styleClass="stats-number">
                                          <font>
                                             <Font name="System Bold" size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="+12% este mes" styleClass="stats-change, stats-positive">
                                          <font>
                                             <Font size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                                 <StackPane styleClass="stats-icon-container, stats-icon-blue">
                                    <children>
                                       <FontIcon iconLiteral="fas-book" iconSize="24" iconColor="#3B82F6" />
                                    </children>
                                 </StackPane>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     
                     <!-- Tarjeta Usuarios Activos -->
                     <VBox styleClass="stats-card, stats-card-green" spacing="12.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <padding>
                           <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
                        </padding>
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="12.0">
                              <children>
                                 <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <Label text="Usuarios Activos" styleClass="stats-label">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                       <Label text="1,234" styleClass="stats-number">
                                          <font>
                                             <Font name="System Bold" size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="+8% este mes" styleClass="stats-change, stats-positive">
                                          <font>
                                             <Font size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                                 <StackPane styleClass="stats-icon-container, stats-icon-green">
                                    <children>
                                       <FontIcon iconLiteral="fas-users" iconSize="24" iconColor="#10B981" />
                                    </children>
                                 </StackPane>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     
                     <!-- Tarjeta Préstamos Activos -->
                     <VBox styleClass="stats-card, stats-card-orange" spacing="12.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <padding>
                           <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
                        </padding>
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="12.0">
                              <children>
                                 <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <Label text="Préstamos Activos" styleClass="stats-label">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                       <Label text="456" styleClass="stats-number">
                                          <font>
                                             <Font name="System Bold" size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="-3% este mes" styleClass="stats-change, stats-negative">
                                          <font>
                                             <Font size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                                 <StackPane styleClass="stats-icon-container, stats-icon-orange">
                                    <children>
                                       <FontIcon iconLiteral="fas-book-reader" iconSize="24" iconColor="#F59E0B" />
                                    </children>
                                 </StackPane>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     
                     <!-- Tarjeta Bibliotecarios -->
                     <VBox styleClass="stats-card, stats-card-purple" spacing="12.0" GridPane.columnIndex="3" GridPane.rowIndex="0">
                        <padding>
                           <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
                        </padding>
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="12.0">
                              <children>
                                 <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <Label text="Bibliotecarios" styleClass="stats-label">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                       <Label text="24" styleClass="stats-number">
                                          <font>
                                             <Font name="System Bold" size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="+2 nuevos" styleClass="stats-change, stats-positive">
                                          <font>
                                             <Font size="12.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                                 <StackPane styleClass="stats-icon-container, stats-icon-purple">
                                    <children>
                                       <FontIcon iconLiteral="fas-user-tie" iconSize="24" iconColor="#8B5CF6" />
                                    </children>
                                 </StackPane>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </GridPane>

                  

               </VBox>
            </content>
         </ScrollPane>
      </StackPane>
   </center>
   
</BorderPane>