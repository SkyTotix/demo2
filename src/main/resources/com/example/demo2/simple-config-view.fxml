<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controller.SystemConfigController">
   <children>
      <Label text="Configuracion del Sistema" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      
      <TabPane fx:id="configTabPane" tabClosingPolicy="UNAVAILABLE">
          
          <Tab text="Personalizacion">
             <VBox spacing="15.0">
                <children>
                   <Label text="Identidad del Sistema" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                   
                   <Label text="Personaliza el logo que se muestra en el sistema y en la pantalla de inicio de sesión" style="-fx-font-size: 12px;" />
                   
                   <HBox spacing="20.0">
                      <!-- Logo Principal (Aplicación) -->
                      <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
                         <children>
                            <Label text="Logo Principal" style="-fx-font-weight: bold;" />
                            <Label text="Este logo se mostrará en la barra lateral del sistema" style="-fx-font-size: 12px;" />
                            
                            <StackPane style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 5; -fx-min-height: 100; -fx-alignment: center;">
                               <children>
                                  <ImageView fx:id="imgLogoAppPreview" fitWidth="100" preserveRatio="true">
                                     <Image url="@../../../images/default-logo.png" />
                                  </ImageView>
                                  <Label fx:id="lblLogoAppActual" text="Logo actual del sistema" style="-fx-font-size: 11px; -fx-text-fill: #666666;" StackPane.alignment="BOTTOM_CENTER">
                                     <StackPane.margin>
                                        <Insets bottom="5.0" />
                                     </StackPane.margin>
                                  </Label>
                               </children>
                            </StackPane>
                            
                            <HBox spacing="10.0">
                               <children>
                                  <Button fx:id="btnSeleccionarLogoApp" onAction="#handleSeleccionarLogoApp" text="📁 Subir nuevo logo" style="-fx-background-color: #f0f0f0;" />
                                  <Button fx:id="btnRestaurarLogoApp" onAction="#handleRestaurarLogoApp" text="🔄 Eliminar" style="-fx-background-color: #ffeeee; -fx-text-fill: #cc0000;" />
                               </children>
                            </HBox>
                         </children>
                      </VBox>
                      
                      <!-- Logo de Inicio de Sesión -->
                      <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
                         <children>
                            <Label text="Logo de Inicio de Sesión" style="-fx-font-weight: bold;" />
                            <Label text="Este logo se mostrará en la pantalla de login" style="-fx-font-size: 12px;" />
                            
                            <StackPane style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 5; -fx-min-height: 100; -fx-alignment: center;">
                               <children>
                                  <ImageView fx:id="imgLogoLoginPreview" fitWidth="100" preserveRatio="true">
                                     <Image url="@../../../images/default-logo.png" />
                                  </ImageView>
                                  <Label fx:id="lblLogoLoginActual" text="Logo actual de inicio de sesión" style="-fx-font-size: 11px; -fx-text-fill: #666666;" StackPane.alignment="BOTTOM_CENTER">
                                     <StackPane.margin>
                                        <Insets bottom="5.0" />
                                     </StackPane.margin>
                                  </Label>
                               </children>
                            </StackPane>
                            
                            <HBox spacing="10.0">
                               <children>
                                  <Button fx:id="btnSeleccionarLogoLogin" onAction="#handleSeleccionarLogoLogin" text="📁 Subir nuevo logo" style="-fx-background-color: #f0f0f0;" />
                                  <Button fx:id="btnRestaurarLogoLogin" onAction="#handleRestaurarLogoLogin" text="🔄 Eliminar" style="-fx-background-color: #ffeeee; -fx-text-fill: #cc0000;" />
                               </children>
                            </HBox>
                         </children>
                      </VBox>
                   </HBox>
                   
                   <!-- Información y Recomendaciones -->
                   <HBox spacing="10.0">
                      <children>
                         <VBox spacing="5.0" style="-fx-background-color: #f0f8ff; -fx-padding: 10; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                            <children>
                               <HBox alignment="CENTER_LEFT" spacing="5.0">
                                  <children>
                                     <Label text="ℹ️" />
                                     <Label text="Recomendaciones para el logo:" style="-fx-font-weight: bold;" />
                                  </children>
                               </HBox>
                               <Label text="• Tamaño recomendado: 200×200 píxeles" style="-fx-font-size: 11px;" />
                               <Label text="• Formatos aceptados: PNG, JPG, SVG" style="-fx-font-size: 11px;" />
                               <Label text="• Peso máximo: 1MB" style="-fx-font-size: 11px;" />
                            </children>
                         </VBox>
                         
                         <VBox spacing="5.0" style="-fx-background-color: #fff8e0; -fx-padding: 10; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                            <children>
                               <HBox alignment="CENTER_LEFT" spacing="5.0">
                                  <children>
                                     <Label text="⚠️" />
                                     <Label text="Importante:" style="-fx-font-weight: bold;" />
                                  </children>
                               </HBox>
                               <Label text="Cambiar el logo de inicio de sesión afectará a todos los usuarios" style="-fx-font-size: 11px;" />
                               <Label text="cuando accedan al sistema. Asegúrate de que la imagen sea clara y" style="-fx-font-size: 11px;" />
                               <Label text="represente correctamente tu organización." style="-fx-font-size: 11px;" />
                            </children>
                         </VBox>
                      </children>
                   </HBox>
                </children>
                <padding>
                   <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                </padding>
             </VBox>
          </Tab>
          
       </TabPane>
      
      <HBox spacing="10.0">
         <children>
            <Button fx:id="btnSaveAll" onAction="#handleSaveAll" text="Guardar" />
            <Button fx:id="btnResetDefaults" onAction="#handleResetDefaults" text="Restaurar" />
         </children>
      </HBox>
      
   </children>
   <padding>
      <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
   </padding>
</VBox>